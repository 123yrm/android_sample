<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.yyp.socket.view.MusicPlayActivity">

    <include
        layout="@layout/toolbar_transparent"/>

    <ListView
        android:id="@+id/music_play_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/music_play_start_stop_radius_bg"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scrollbars="none"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/music_play_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/music_play_start_stop_radius_bg"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/tips"
        android:text="@string/tips_text"/>

</LinearLayout>
